{	"name": "Python 3",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "mcr.microsoft.com/devcontainers/python:0-3.8-bullseye",
    "workspaceFolder": "/workspaces/vol11_bookmark/server",

    "features": {
                  "ghcr.io/devcontainers/features/git:1": {},
                  "ghcr.io/guiyomh/features/vim:0": {},
                  "ghcr.io/devcontainers/features/docker-from-docker": {},
                  "ghcr.io/oleksis/devcontainer-features/python-launcher": {},
                  "ghcr.io/devcontainers/features/python": {}
          },
    "customizations": {
        "vscode": {
            "extensions": [
                "donjayamanne.python-extension-pack"
            ]
        }
    },
    "runArgs": [
        // "--gpus", "all",
        // "--shm-size", "64gb",
        "--device", "/dev/video0:/dev/video0:mwr",
        "--privileged",
        "-e", "DISPLAY=:1",
        "-e", "QT_X11_NO_MITSHM=1",
        "-v", "/tmp/.X11-unix/:/tmp/.X11-unix:rw"
      ]
}