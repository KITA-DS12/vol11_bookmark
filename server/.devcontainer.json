	"image": "mcr.microsoft.com/devcontainers/python:0-3.8-bullseye",
    "workspaceFolder": "/workspace/server",

    "features": {
                  "ghcr.io/devcontainers/features/git:1": {},
                  "ghcr.io/guiyomh/features/vim:0": {},
